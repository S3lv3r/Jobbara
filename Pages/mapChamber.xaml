<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jobbara.Pages.mapChamber"
             Title="mapChamber"
             xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
shell:Shell.NavBarIsVisible="False"
              BackgroundColor="White">

    <Grid Padding="20" VerticalOptions="Start" Margin="0,40,0,0">

        <VerticalStackLayout Spacing="20">

            <!-- Frame principal -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   HorizontalOptions="Fill"
                   VerticalOptions="Start">

                <StackLayout Spacing="20">
                    
                    <!-- Info del trabajador -->
                    <Frame BackgroundColor="#DDDDDD"
                           CornerRadius="15"
                           Padding="15"
                           HasShadow="False">
                        <Grid ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Imagen -->
                            <Image Source="profile_default.png"
                                   WidthRequest="80"
                                   HeightRequest="80"
                                   Aspect="AspectFill"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Center"
                                   Grid.Column="0"
                                   Margin="0,0,10,0"/>

                            <!-- Datos -->
                            <VerticalStackLayout Grid.Column="1"
                                                 VerticalOptions="Center"
                                                 Spacing="5">
                                <Label Text="Nombre"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       x:Name="lblName"/>
                                <Label Text="DirecciÃ³n: none"
                                       FontSize="14"
                                       TextColor="Gray"
                                       x:Name="addressLbl"/>
                                <Label Text="Trabajo: none"
                                       FontSize="14"
                                       TextColor="Gray"
                                       x:Name="jobLbl"/>
                                <Label Text="Monto a pagar: idk"
                                       FontSize="14"
                                       TextColor="Gray"
                                       x:Name="paymentLbl"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Botones -->
                    <HorizontalStackLayout Spacing="15"
                                           HorizontalOptions="Center" Margin="0,350,0,0">
                        <Button Text="Rechazar"
                                BackgroundColor="#FF5C5C"
                                TextColor="White"
                                CornerRadius="15"
                                WidthRequest="120"
                                Clicked="OnCancelarClicked"/>

                        <Button Text="Aceptar"
                                BackgroundColor="Green"
                                TextColor="White"
                                CornerRadius="15"
                                WidthRequest="120"
                                Clicked="OnAceptarClicked"/>
                    </HorizontalStackLayout>


                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </Grid>
</ContentPage>