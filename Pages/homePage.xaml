<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
             shell:Shell.NavBarIsVisible="False"
             x:Class="Jobbara.Pages.homePage"
             Title="homePage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFA05A" Offset="0.4"/>
            <!-- Naranja arriba -->
            <GradientStop Color="#F0F0F0" Offset="1.0"/>
            <!-- Blanco abajo -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- 游 Barra abajo ocupa fila nueva -->

        <!-- 游빅 Header -->
        <Grid ColumnDefinitions="Auto,*,Auto" Row="0" Padding="20">
            <ImageButton x:Name="ImgPerfil" Source="usuario.png" WidthRequest="40" HeightRequest="40"
           Aspect="AspectFill"
           VerticalOptions="Center"
                         Clicked="OnGoToProfile">
                <ImageButton.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                </ImageButton.Clip>
            </ImageButton>

            <Label Grid.Column="1" Text="MiNombre" VerticalOptions="Center"
           FontAttributes="Bold" FontSize="24" Margin="10,0" x:Name="usernameLbl"/>

            <ImageButton Grid.Column="2" Source="bell.png"
                 WidthRequest="28" HeightRequest="28"
                         Clicked="OnGoToNot"
                 BackgroundColor="Transparent"/>
        </Grid>
        <Frame Grid.Row="1"
               CornerRadius="20"
               BackgroundColor="White"
               Padding="15"
               HasShadow="True"
               Margin="30,30,30,30">

            <ScrollView>
                <VerticalStackLayout Spacing="10">

                    <!-- Label Recientes -->
                    

                    <!-- Rese침a 1 -->
                    

                    <!-- Rese침a 2 -->
                    

                    <!-- Rese침a 3 -->
                    

                </VerticalStackLayout>
            </ScrollView>
        </Frame>

        <!-- 游댷 BARRA DE NAVEGACI칍N INFERIOR -->
        <Grid Grid.Row="2"
              BackgroundColor="#F0F0F0"
              Padding="10"
              HeightRequest="70"
              ColumnSpacing="30">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Bot칩n: Inicio -->
            <ImageButton
                    BackgroundColor="Transparent"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                WidthRequest="40"
                Source="settings.png"
                Clicked="GoToAjustes"
                    Margin="0,-20,0,0"/>
            <Label Text="Ajustes" TextColor="DarkOrange" FontAttributes="Bold"
       Grid.Column="0"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       Margin="0,34,0,0"
       FontSize="12"/>

            <!-- Bot칩n central grande -->
            <Frame HeightRequest="80"
                   WidthRequest="80"
                   CornerRadius="40"
                   BackgroundColor="#FF9B51"
                   Padding="0"
                   HasShadow="True"
                   BorderColor="#E65100"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Grid.Column="1"
                   Margin="0,-30,0,0">
                <!-- 游 Flota encima del frame -->
                <ImageButton Source="plus.png"
                             BackgroundColor="Transparent"
                             Aspect="AspectFit"
                             Padding="0"
                             Clicked="GoToChamba"/>
            </Frame>

            <!-- Bot칩n: Ajustes -->
            <ImageButton
                    BackgroundColor="Transparent"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,-16,0,0"
                Clicked="GoToPagos"
                Source="money.png"
                WidthRequest="47"/>
            <Label Text="Pagos" TextColor="DarkOrange" FontAttributes="Bold"
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,34,0,0"
                   FontSize="12"/>
        </Grid>

    </Grid>
</ContentPage>
