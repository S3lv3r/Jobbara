<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"
             shell:Shell.NavBarIsVisible="False"
             x:Class="Jobbara.Pages.homePage"
             Title="homePage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFA05A" Offset="0.4"/>
            <!-- Naranja arriba -->
            <GradientStop Color="#F0F0F0" Offset="1.0"/>
            <!-- Blanco abajo -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*,Auto">
        <!--  Barra abajo ocupa fila nueva -->

        <!-- Б Header -->
        <Grid ColumnDefinitions="Auto,*,Auto" Row="0" Padding="20">
            <ImageButton Source="usuario.png" WidthRequest="40" HeightRequest="40"
           Aspect="AspectFill"
           VerticalOptions="Center"
                         Clicked="OnGoToProfile">
                <ImageButton.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                </ImageButton.Clip>
            </ImageButton>

            <Label Grid.Column="1" Text="MiNombre" VerticalOptions="Center"
           FontAttributes="Bold" FontSize="24" Margin="10,0" x:Name="usernameLbl"/>

            <ImageButton Grid.Column="2" Source="bell.png"
                 WidthRequest="28" HeightRequest="28"
                         Clicked="OnGoToNot"
                 BackgroundColor="Transparent"/>
        </Grid>
        <Frame Grid.Row="1"
               CornerRadius="20"
               BackgroundColor="White"
               Padding="15"
               HasShadow="True"
               Margin="30,30,30,30">

            <ScrollView>
                <VerticalStackLayout Spacing="10">

                    <!-- Label Recientes -->
                    <HorizontalStackLayout Spacing="6">
                        <Image Source="reloj.png" WidthRequest="16" HeightRequest="16"/>
                        <Label Text="Recientes" FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                    </HorizontalStackLayout>

                    <!-- Rese帽a 1 -->
                    <Frame BackgroundColor="#EEEEEE" CornerRadius="12" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="aqui_va_algo3.png" WidthRequest="40" HeightRequest="40">
                                <Image.Clip>
                                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20" />
                                </Image.Clip>
                            </Image>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="Carlos Rivera" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                <Label Text="Volver茅 sin duda." FontSize="13" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Rese帽a 2 -->
                    <Frame BackgroundColor="#EEEEEE" CornerRadius="12" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="aqui_va_algo2.png" WidthRequest="40" HeightRequest="40"
                                   Clip="EllipseGeometry Center=20,20 RadiusX=20 RadiusY=20"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="Ana G贸mez" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                <Label Text="Muy recomendable." FontSize="13" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Rese帽a 3 -->
                    <Frame BackgroundColor="#EEEEEE" CornerRadius="12" Padding="10" HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="aqui_va_algo3.png" WidthRequest="40" HeightRequest="40"
                                   Clip="EllipseGeometry Center=20,20 RadiusX=20 RadiusY=20"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="Carlos Rivera" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                                <Label Text="Volver茅 sin duda." FontSize="13" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                </VerticalStackLayout>
            </ScrollView>
        </Frame>

        <!--  BARRA DE NAVEGACIN INFERIOR -->
        <Grid Grid.Row="2"
              BackgroundColor="#F0F0F0"
              Padding="10"
              HeightRequest="70"
              ColumnSpacing="30">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Bot贸n: Inicio -->
            <ImageButton
                    BackgroundColor="Transparent"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                WidthRequest="40"
                Source="settings.png"
                Clicked="GoToAjustes"
                    Margin="0,-20,0,0"/>
            <Label Text="Ajustes" TextColor="DarkOrange" FontAttributes="Bold"
       Grid.Column="0"
       HorizontalOptions="Center"
       VerticalOptions="Center"
       Margin="0,34,0,0"
       FontSize="12"/>

            <!-- Bot贸n central grande -->
            <Frame HeightRequest="80"
                   WidthRequest="80"
                   CornerRadius="40"
                   BackgroundColor="#FF9B51"
                   Padding="0"
                   HasShadow="True"
                   BorderColor="#E65100"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Grid.Column="1"
                   Margin="0,-30,0,0">
                <!--  Flota encima del frame -->
                <ImageButton Source="plus.png"
                             BackgroundColor="Transparent"
                             Aspect="AspectFit"
                             Padding="0"
                             Clicked="GoToChamba"/>
            </Frame>

            <!-- Bot贸n: Ajustes -->
            <ImageButton
                    BackgroundColor="Transparent"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,-16,0,0"
                Clicked="GoToPagos"
                Source="money.png"
                WidthRequest="47"/>
            <Label Text="Pagos" TextColor="DarkOrange" FontAttributes="Bold"
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,34,0,0"
                   FontSize="12"/>
        </Grid>

    </Grid>
</ContentPage>
