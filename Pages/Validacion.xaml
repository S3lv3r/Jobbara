<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jobbara.Pages.Validacion"
             Title="Validacion"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Start">

            <!-- icono-->
            <Image 
                Source="app_icon.png" 
                HorizontalOptions="Center" 
                HeightRequest="60" 
                WidthRequest="60" />

            <!-- log in anuncio-->
            <Label 
                Text="Log In to Jobbara" 
                FontSize="24" 
                FontAttributes="Bold" 
                HorizontalOptions="Center" 
                TextColor="Black" />

            <!-- espacio -->
            <BoxView HeightRequest="20" Color="Transparent" />

            <!-- pal codigo -->
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="10"
                Padding="10">

                <Entry x:Name="Code1"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>

                <Entry x:Name="Code2"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>

                <Entry x:Name="Code3"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>

                <Entry x:Name="Code4"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>

                <Entry x:Name="Code5"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>

                <Entry x:Name="Code6"
           WidthRequest="40"
           HeightRequest="50"
           MaxLength="1"
           Keyboard="Numeric"
           FontSize="24"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           BackgroundColor="#F0F0F0"
           TextColor="Black"
           TextChanged="OnCodeEntryTextChanged"/>
            </HorizontalStackLayout>

            <!-- btn xd-->
            <Button 
                Text="Redeem" 
                BackgroundColor="#FF9B51" 
                TextColor="White" 
                CornerRadius="20"
                HeightRequest="50"
                FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
